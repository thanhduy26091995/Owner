<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/margin_padding_10dp"
    android:background="@drawable/background_button_white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:gravity="center"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageView_applicant_avatar"
            android:layout_width="@dimen/avatar_size_sign_in"
            android:layout_height="@dimen/avatar_size_sign_in"
            android:src="@drawable/avatar" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginTop="@dimen/margin_padding_05dp">

            <TextView
                android:id="@+id/textView_applicant_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="Duy BÃ¹i"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:textColor="@color/colorBlack"
                android:layout_toLeftOf="@id/txt_right"
                android:textSize="@dimen/text_size_small" />

            <com.hbbsolution.owner.base.IconTextView
                android:id="@+id/txt_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_padding_05dp"
                android:text="@string/ion_chevron_right"
                android:layout_alignParentRight="true"
                android:textColor="@color/grey_800"
                android:textSize="@dimen/icon_size_normal" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>